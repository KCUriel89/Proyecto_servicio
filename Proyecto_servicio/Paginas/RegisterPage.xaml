<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_servicio.Paginas.RegisterPage"
             Title="RegisterPage">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">

            <Label Text="Crear cuenta 游닇"
                   FontSize="28"
                   HorizontalOptions="Center"
                   TextColor="#333" />

            <!-- Campos de texto -->
            <Entry Placeholder="Nombre"
                   Text="{Binding Nombre}"
                    />
            <Entry Placeholder="Apellido paterno"
                   Text="{Binding ApellidoPaterno}"
                    />
            <Entry Placeholder="Apellido materno"
                   Text="{Binding ApellidoMaterno}"
                    />
            <DatePicker Date="{Binding FechaNacimiento}"
            MaximumDate="{Binding FechaMaxima}" />


            <Entry Placeholder="Correo electr칩nico"
                   Text="{Binding Email}"
                   Keyboard="Email"
                    />
            <Entry Placeholder="Usuario"
                   Text="{Binding Username}"
                    />
            <Entry Placeholder="Contrase침a"
                   Text="{Binding Password}"
                   IsPassword="True"
                    />
            <Entry Placeholder="Confirmar contrase침a"
                   Text="{Binding ConfirmPassword}"
                   IsPassword="True"
                    />

            <!-- Bot칩n de registro -->
            <Button Text="Registrarse"
                    Command="{Binding RegisterCommand}"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="12"
                    HeightRequest="50" />

            <!-- Volver al login -->
            <Button Text="Volver al inicio de sesi칩n"
                    Command="{Binding GoToLoginCommand}"
                    BackgroundColor="Transparent"
                    TextColor="#2563EB"
                    FontAttributes="Bold" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>